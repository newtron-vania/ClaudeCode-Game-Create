/* ============================================
   ROOT & LAYOUT
   ============================================ */

.panel-root {
    width: 100%;
    height: 100%;
    position: absolute;
    justify-content: center;
    align-items: center;
    display: flex;
    flex-direction: column;
}

.background-overlay {
    width: 100%;
    height: 100%;
    position: absolute;
    background-color: rgba(0, 0, 0, 0.8);
}

.content-container {
    width: 800px;
    max-height: 90%;
    justify-content: center;
    align-items: center;
    padding-top: 50px;
    padding-bottom: 50px;
    padding-left: 50px;
    padding-right: 50px;
    flex-direction: column;
}

/* ============================================
   TITLE
   ============================================ */

.title-text {
    font-size: 60px;
    -unity-font-style: bold;
    color: rgb(255, 217, 0);
    margin-bottom: 40px;
    -unity-text-align: middle-center;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
}

/* ============================================
   OPTIONS CONTAINER
   ============================================ */

.options-container {
    width: 100%;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

/* ============================================
   OPTION BUTTON - BASE STATES
   ============================================ */

.option-button {
    width: 600px;
    height: 120px;
    flex-direction: row;
    background-color: rgba(51, 51, 64, 0.95);
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
    border-bottom-left-radius: 10px;
    border-bottom-right-radius: 10px;
    border-left-width: 2px;
    border-right-width: 2px;
    border-top-width: 2px;
    border-bottom-width: 2px;
    border-left-color: rgba(255, 255, 255, 0.2);
    border-right-color: rgba(255, 255, 255, 0.2);
    border-top-color: rgba(255, 255, 255, 0.2);
    border-bottom-color: rgba(255, 255, 255, 0.2);
    margin-bottom: 20px;
    padding-top: 10px;
    padding-bottom: 10px;
    padding-left: 10px;
    padding-right: 10px;

    /* Cursor */
    cursor: link;

    /* Transition for smooth animations */
    transition-duration: 0.2s;
    transition-property: scale, background-color, border-left-color, border-right-color, border-top-color, border-bottom-color;
    transition-timing-function: ease-out;
}

.option-button:hover {
    scale: 1.05;
    background-color: rgba(77, 77, 102, 1);
    border-left-color: rgba(255, 217, 0, 0.6);
    border-right-color: rgba(255, 217, 0, 0.6);
    border-top-color: rgba(255, 217, 0, 0.6);
    border-bottom-color: rgba(255, 217, 0, 0.6);
}

.option-button:active {
    scale: 0.98;
    background-color: rgba(102, 102, 128, 1);
}

/* ============================================
   OPTION BUTTON - ANIMATION STATES
   ============================================ */

.option-button--hidden {
    translate: -800px 0 0;
    opacity: 0;
    display: flex;
}

.option-button--visible {
    translate: 0 0 0;
    opacity: 1;
    display: flex;
    transition-duration: 0.1s;
    transition-property: translate, opacity;
    transition-timing-function: ease-out-cubic;
}

/* ============================================
   ICON
   ============================================ */

.icon-container {
    width: 80px;
    height: 80px;
    margin-right: 15px;
    justify-content: center;
    align-items: center;
    flex-shrink: 0;
}

.icon-image {
    width: 80px;
    height: 80px;
    -unity-background-scale-mode: scale-to-fit;
}

/* ============================================
   TEXT CONTAINER
   ============================================ */

.text-container {
    flex-grow: 1;
    flex-direction: column;
    justify-content: center;
    padding-left: 5px;
}

.name-text {
    font-size: 24px;
    -unity-font-style: bold;
    color: rgb(255, 255, 255);
    margin-bottom: 8px;
    -unity-text-align: upper-left;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.description-text {
    font-size: 16px;
    color: rgb(220, 220, 220);
    white-space: normal;
    -unity-text-align: upper-left;
    flex-wrap: wrap;
    max-height: 60px;
    overflow: hidden;
}

/* ============================================
   UTILITY CLASSES
   ============================================ */

.hidden {
    display: none;
}

.disabled {
    opacity: 0.5;
}
